{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "rule": {
            "type": "string",
            "const": "mention"
        },
        "community": {
            "type": "string"
        },
        "command": {
            "type": [
                "string",
                "null"
            ]
        },
        "action": {
            "type": "string",
            "enum": [
                "pin",
                "lock"
            ]
        },
        "message": {
            "type": [
                "string",
                "null"
            ]
        }
    },
    "required": [
        "rule",
        "community",
        "command",
        "action",
        "message"
    ]
}